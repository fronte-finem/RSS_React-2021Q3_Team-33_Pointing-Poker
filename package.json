{
  "name": "pointing-poker",
  "private": true,
  "engines": {
    "node": "15.x"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "npm run lint && npm run test && tsc && vite build",
    "serve": "vite preview",
    "lint": "pretty-quick --staged && eslint ./ --ext .ts,.tsx --fix",
    "test": "jest",
    "test:cover": "jest --coverage",
    "generate:api-types": "npx ts-json-schema-generator --path ./shared/api-types/*.ts --unstable --no-type-check --out ./server/doc/api-types.schema.json",
    "pnpx:generate:api-types": "pnpx ts-json-schema-generator --path ./shared/api-types/*.ts --unstable --no-type-check --out ./server/doc/api-types.schema.json",
    "generate:api-doc-html": "npx -p @asyncapi/generator ag ./server/doc/async-api.schema.json @asyncapi/html-template --force-write -o ./server/doc/html",
    "pnpx:generate:api-doc-html": "pnpx -p @asyncapi/generator ag ./server/doc/async-api.schema.json @asyncapi/html-template --force-write -o ./server/doc/html"
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.4",
    "ajv": "^8.6.2",
    "ajv-formats": "^2.1.1",
    "antd": "^4.16.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.1",
    "socket.io": "^4.2.0",
    "socket.io-client": "^4.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.3.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.1.0",
    "postcss": "^8.3.6",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2",
    "vite": "^2.5.2",
    "vite-plugin-checker": "^0.3.4",
    "vite-tsconfig-paths": "^3.3.13"
  }
}
